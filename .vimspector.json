{
  "configurations": {
    "launch": {
      "adapter": "CodeLLDB",
      "filetypes": [ "cpp", "c" ],
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/bld/dist/bin/salamander"
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "N",
          "cpp_catch": "N"
        }
      }
    }
  }
}

